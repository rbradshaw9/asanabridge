# Server Configuration
NODE_ENV=production
PORT=3000

# Database Configuration (DigitalOcean Managed Database)
DATABASE_URL=postgresql://doadmin:[YOUR_PASSWORD]@[YOUR_HOST]:25060/defaultdb?sslmode=require

# Security
JWT_SECRET=your_super_secret_jwt_key_at_least_32_chars_long_for_production
JWT_EXPIRES_IN=7d

# Asana OAuth Configuration
ASANA_CLIENT_ID=your_asana_client_id
ASANA_CLIENT_SECRET=your_asana_client_secret
ASANA_REDIRECT_URI=https://asanabridge.com/api/oauth/asana/callback

# Frontend Configuration
FRONTEND_URL=https://asanabridge.com

# Optional Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9100
