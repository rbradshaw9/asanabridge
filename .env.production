# Production Environment Configuration for DigitalOcean
# Copy this to .env on your droplet and fill in the actual values

# Database Configuration (DigitalOcean Managed Database)
# Replace with your actual database connection string from DigitalOcean
DATABASE_URL="postgresql://doadmin:AVNS_[your_password]@dbaas-db-8209766-do-user-[user_id]-0.c.db.ondigitalocean.com:25060/defaultdb?sslmode=require"

# Server Configuration
NODE_ENV=production
PORT=3000
JWT_SECRET=generate_a_secure_random_string_here

# Asana Configuration
# Get these from https://app.asana.com/0/developer-console
ASANA_CLIENT_ID=your_asana_client_id_here
ASANA_CLIENT_SECRET=your_asana_client_secret_here
ASANA_REDIRECT_URI=https://asanabridge.com/oauth/asana/callback

# Frontend Configuration
FRONTEND_URL=https://asanabridge.com

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Security Configuration
CORS_ORIGIN=https://asanabridge.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100